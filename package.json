{
    "private": true,
    "workspaces": {
        "packages": [
            "platform/core/*",
            "platform/packages/*",
            "platform/plugins/*",
            "platform/themes/*"
        ]
    },
    "scripts": {
        "dev": "npm run development",
        "development": "mix",
        "watch": "mix watch",
        "watch-poll": "mix watch -- --watch-options-poll=1000",
        "hot": "mix watch --hot",
        "prod": "npm run production",
        "production": "mix --production",
        "format": "npx prettier platform/**/resources/js/**/*.{js,vue} platform/**/resources/sass/*.scss platform/**/resources/views/**/*.blade.php platform/themes/*/{layouts,partials,views,widgets}/**/*.blade.php platform/themes/*/assets/**/*.{js,scss} --write"
    },
    "devDependencies": {
        "@babel/core": "^7.27.4",
        "@babel/plugin-proposal-object-rest-spread": "^7.20.7",
        "@babel/plugin-syntax-dynamic-import": "^7.8.3",
        "@babel/plugin-transform-runtime": "^7.27.4",
        "@babel/preset-env": "^7.27.2",
        "@fullhuman/postcss-purgecss": "^7.0.2",
        "@shufo/prettier-plugin-blade": "^1.14.1",
        "@tabler/core": "1.0.0-beta19",
        "@types/node": "^24.0.1",
        "@types/vue-router": "^2.0.0",
        "@types/webpack-env": "^1.18.8",
        "@vue/compiler-sfc": "^3.5.16",
        "@vue/runtime-core": "^3.5.16",
        "@vue/runtime-dom": "^3.5.16",
        "autoprefixer": "^10.4.20",
        "cross-env": "^7.0.3",
        "css-loader": "^7.1.2",
        "glob": "^11.0.0",
        "laravel-mix": "^6.0.49",
        "path-browserify": "^1.0.1",
        "postcss": "^8.4.49",
        "prettier": "^3.4.1",
        "resolve-url-loader": "^5.0.0",
        "sass": "^1.82.0",
        "sass-loader": "^16.0.3",
        "ts-loader": "^9.5.2",
        "typescript": "^5.8.3",
        "vue-loader": "^17.3.0",
        "vue-router": "4",
        "vuex": "^4.0.2",
        "webpack": "^5.99.9",
        "webpack-cli": "^6.0.1"
    },
    "dependencies": {
        "axios": "^1.7.8",
        "cropperjs": "^1.6.2",
        "epic-spinners": "^2.0.0",
        "jquery": "^3.7.1",
        "lodash": "^4.17.21",
        "moment": "^2.30.1",
        "sanitize-html": "^2.13.1",
        "tiny-emitter": "^2.1.0",
        "vue": "^3.3.4"
    }
}
